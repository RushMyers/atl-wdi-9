<ul>
  <% @articles.each  do |article| %>
    <li>
      <h1><%= article.title %></h1>
      <i><%= article.content[0, 300]%>...</i>
      <br>
      <br>
      <%= link_to 'click to see full article and comments', comments_index_path( article_id: article.id ) %>
    </li>
  <% end %>
</ul>
